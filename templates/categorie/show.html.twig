{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Categorie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ categorie.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ categorie.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ categorie.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="card-header d-flex justify-content-between align-items-center">
        <div>
           <a class="btn btn-secondary" href="{{ path('app_categorie_index') }}">Back to List</a>
           <a class="btn btn-warning" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Edit</a> 
        </div>

        <a class="btn btn-danger">
            {{ include('categorie/_delete_form.html.twig') }}
        </a>
    </div>
{% endblock %}
