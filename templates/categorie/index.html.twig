{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
<div class="card-header d-flex justify-content-between align-items-center">
    <h1>Categories</h1>
    <a class="btn btn-sm btn-primary" href="{{ path('app_categorie_new') }}">Create new Categorie</a>
</div>

{{ include('partials/flash.html.twig') }}

    <table class="table">
        <thead> 
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td>{{ categorie.id }}</td>
                <td>{{ categorie.name }}</td>
                <td>{{ categorie.description }}</td>
        
                <td>
                    <div class="d-flex justify-content-center">
                        <a class="btn btn-sm btn-info" href="{{ path('app_categorie_show', {'id': categorie.id}) }}">Show</a>
                        <a class="btn btn-sm btn-warning mx-1" href="{{ path('app_categorie_edit', {'id': categorie.id}) }}">Edit</a>
                        {{ include('categorie/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
        <tr>
            <h2><td colspan="9" style="text-align: center; font-weight: bold;">Aucune catégorie n'a été ajoutée. Vous pouvez en ajouter une en cliquant sur 
                <a class="btn btn-sm btn-warning" href="{{ path('app_categorie_new') }}">nouveau</a>
            </td></h2>
        </tr>
        
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
